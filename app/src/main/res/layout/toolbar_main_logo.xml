<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homeScreenToolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fw_white"
    android:elevation="@dimen/toolbar_elevation"
    android:fitsSystemWindows="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/burger_btn"
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/ic_image_burger_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="SMART CITY"
            android:textColor="@color/fw_seaweed"
            android:fontFamily="@font/proximanova_bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/login_btn"
            app:layout_constraintStart_toEndOf="@+id/burger_btn"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_fw_login_btn" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.Toolbar>
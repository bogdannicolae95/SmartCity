<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fw_white">


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/login_background" />

            <com.facebook.login.widget.LoginButton
                android:id="@+id/loginButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />

            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginEnd="16dp"
                android:background="@color/fw_divider"
                app:layout_constraintBottom_toBottomOf="@+id/divider_text"
                app:layout_constraintEnd_toStartOf="@+id/divider_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/divider_text" />

            <TextView
                android:id="@+id/divider_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/bebasneue_book"
                android:text="Or enter your details"
                android:textColor="@color/fw_charcoal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/loginButton3" />

            <View
                android:id="@+id/right_divider"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginStart="16dp"
                android:background="@color/fw_divider"
                app:layout_constraintBottom_toBottomOf="@+id/divider_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/divider_text"
                app:layout_constraintTop_toTopOf="@+id/divider_text" />

            <android.support.v7.widget.CardView
                android:id="@+id/sign_up_detail_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:elevation="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_text">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/signup_first_name_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/fw_transparent"
                        android:drawableStart="@drawable/ic_image_name"
                        android:drawablePadding="16dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/proximanova_regular"
                        android:hint="First Name"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingStart="16dp" />

                    <TextView
                        android:id="@+id/signup_first_name_error"
                        style="@style/ErrorAppearance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="-5dp"
                        android:text="@string/example_short"
                        android:visibility="invisible" />

                    <EditText
                        android:id="@+id/signup_last_name_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="@color/fw_transparent"
                        android:drawableStart="@drawable/ic_image_name"
                        android:drawablePadding="16dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/proximanova_regular"
                        android:hint="First Name"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingStart="16dp" />

                    <TextView
                        android:id="@+id/signup_last_name_error"
                        style="@style/ErrorAppearance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="-5dp"
                        android:text="@string/example_short"
                        android:visibility="invisible" />

                    <EditText
                        android:id="@+id/signup_email_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/fw_transparent"
                        android:drawableStart="@drawable/ic_image_email"
                        android:drawablePadding="16dp"
                        android:ellipsize="end"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/proximanova_regular"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:paddingStart="16dp" />

                    <TextView
                        android:id="@+id/signup_email_error"
                        style="@style/ErrorAppearance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="-5dp"
                        android:text="@string/example_short"
                        android:visibility="invisible" />

                    <EditText
                        android:id="@+id/signup_phone_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/fw_transparent"
                        android:drawableStart="@drawable/ic_image_sign_up_phone"
                        android:drawablePadding="16dp"
                        android:ellipsize="end"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/proximanova_regular"
                        android:hint="Phone Number"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:paddingStart="16dp" />

                    <TextView
                        android:id="@+id/signup_phone_error"
                        style="@style/ErrorAppearance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="-5dp"
                        android:text="@string/example_short"
                        android:visibility="invisible" />

                    <EditText
                        android:id="@+id/signup_password_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/fw_transparent"
                        android:drawableStart="@drawable/ic_image_password"
                        android:drawablePadding="16dp"
                        android:ellipsize="end"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/proximanova_regular"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:paddingStart="16dp" />

                    <TextView
                        android:id="@+id/signup_password_error"
                        style="@style/ErrorAppearance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="-5dp"
                        android:text="@string/example_short"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/signup_date_of_birth_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:backgroundTint="@color/fw_transparent"
                        android:drawableStart="@drawable/ic_image_sign_up_date_of_birth"
                        android:drawablePadding="16dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/proximanova_regular"
                        android:hint="Date of Birth"
                        android:maxLines="1"
                        android:paddingStart="16dp" />

                    <TextView
                        android:id="@+id/signup_date_of_birth_error"
                        style="@style/ErrorAppearance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="-5dp"
                        android:text="@string/example_short"
                        android:visibility="invisible" />

                    <LinearLayout
                        android:id="@+id/gender_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:orientation="horizontal"
                        android:paddingStart="16dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/fw_small"
                            android:src="@drawable/ic_image_name" />

                        <TextView
                            android:id="@+id/gender_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/proximanova_regular"
                            android:text="Gender"
                            android:textColor="@color/fw_sesame"
                            android:textSize="@dimen/fw_heading_5" />

                        <RadioGroup
                            android:id="@+id/gender_radio_group"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="24dp"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/gender_male"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/sign_out_checkbox_selector"
                                android:button="@color/fw_transparent"
                                android:fontFamily="@font/proximanova_regular"
                                android:textColor="@color/fw_sesame" />

                            <TextView
                                android:id="@+id/gender_male_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:fontFamily="@font/proximanova_regular"
                                android:paddingEnd="8dp"
                                android:text="Male"
                                android:textColor="@color/fw_sesame"
                                android:textSize="14sp" />

                            <RadioButton
                                android:id="@+id/gender_female"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:background="@drawable/sign_out_checkbox_selector"
                                android:button="@color/fw_transparent"
                                android:fontFamily="@font/proximanova_regular"
                                android:textColor="@color/fw_sesame" />

                            <TextView
                                android:id="@+id/gender_female_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:fontFamily="@font/proximanova_regular"
                                android:paddingEnd="8dp"
                                android:text="Female"
                                android:textColor="@color/fw_sesame"
                                android:textSize="14sp" />

                        </RadioGroup>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/signup_gender_error"
                        style="@style/ErrorAppearance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="-5dp"
                        android:text="@string/example_short"
                        android:visibility="invisible" />

                    <View
                        android:id="@+id/sign_up_hr_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/fw_small"
                        android:background="@color/fw_divider" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/fw_mineral"
                        android:padding="8dp">

                        <CheckBox
                            android:id="@+id/sign_up_check_terms_and_condition"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:button="@drawable/sign_out_checkbox_selector"
                            android:fontFamily="@font/proximanova_regular"
                            android:paddingStart="16dp"
                            android:text="@string/terms_and_conditions_check_box"
                            android:textColor="@color/fw_sesame"
                            android:textSize="@dimen/fw_body_1" />
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/signup_terms_error"
                style="@style/ErrorAppearance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/example_short"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="@+id/sign_up_detail_card_view"
                app:layout_constraintStart_toStartOf="@+id/sign_up_detail_card_view"
                app:layout_constraintTop_toBottomOf="@+id/sign_up_detail_card_view" />

            <Button
                android:id="@+id/sign_up_submit_button"
                style="@style/SmartCityTheme.SeaweedButton"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp"
                android:text="Submit"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signup_terms_error" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.AppBarLayout>